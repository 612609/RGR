<Window x:Class="Order.NewMaterials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order"
        mc:Ignorable="d"
        Title="NewMaterials" Height="200" Width="430">
    <Grid>
        <TextBox x:Name="MatName" TextWrapping="Wrap" Width="120" Margin="246,20,0,0" Height="25"
          VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox PreviewTextInput="MatCost_PreviewTextInput" x:Name="MatCost" TextWrapping="Wrap" Width="120"
          Margin="246,70,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock TextWrapping="Wrap" Text="Материал" Margin="40,20,0,0" Height="25" VerticalAlignment="Top"
            HorizontalAlignment="Left" Width="70"/>
        <TextBlock TextWrapping="Wrap" Text="Цена" Margin="40,70,0,0" Height="25" VerticalAlignment="Top"
            HorizontalAlignment="Left" Width="70"/>
        <Button Click="AddButton_Click" x:Name="AddButton" Content="Ok" Margin="323,118,0,0"
         HorizontalAlignment="Left" Width="79" Height="31" VerticalAlignment="Top"/>
    </Grid>
</Window>
