<Window x:Class="Order.ChangeMat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order"
        mc:Ignorable="d"
        Title="ChangeMat" Height="146" Width="340">
    <Grid>
        <TextBox x:Name="Name" TextWrapping="Wrap" Width="120" Margin="144,10,0,0" HorizontalAlignment="Left"
             Height="26" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Text="Название" Margin="10,10,0,0" HorizontalAlignment="Left" Width="93"
               Height="26" VerticalAlignment="Top"/>
        <TextBox PreviewTextInput="Price_PreviewTextInput" x:Name="Price" TextWrapping="Wrap" Width="120"
             Margin="144,41,0,0" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Text="Цена" Margin="10,36,0,0" HorizontalAlignment="Left" Width="93"
               Height="26" VerticalAlignment="Top"/>
        <Button Click="Button_Click" Content="ОК" Margin="234,81,0,0" Height="25" VerticalAlignment="Top"
            HorizontalAlignment="Left" Width="76"/>
    </Grid>
</Window>
